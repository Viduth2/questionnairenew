    <script>
        function calculateSatisfaction() {
            // Prevent form submission
            event.preventDefault();

            // Get form values
            var workEnvironment = parseInt(document.getElementById('work_environment').value);
            var salary = parseInt(document.getElementById('salary').value);
            var growthOpportunities = parseInt(document.getElementById('growth_opportunities').value);
            var workLifeBalance = parseInt(document.getElementById('work_life_balance').value);
            

            var management = parseInt(document.getElementById('management').value);
            var SupervisorSupport = parseInt(document.getElementById('Supervisor_Support').value);
            var Satisfactionwithvacationdays = parseInt(document.getElementById('Satisfaction_with_vacation_days').value);
            var Workloaddistribution = parseInt(document.getElementById('Work_load_distribution').value);
            var Pensionscheme = parseInt(document.getElementById('Pension_scheme').value);
            var  Workingtimemanagement = parseInt(document.getElementById('Working_time_management').value);


            // Calculate overall satisfaction score
            var overallSatisfaction = (workEnvironment + salary + growthOpportunities + workLifeBalance+ SupervisorSupport + management + Satisfactionwithvacationdays+Workloaddistribution +Pensionscheme + Workingtimemanagement) / 10;

            // Round to two decimal places
            overallSatisfaction = overallSatisfaction.toFixed(2);

            // Determine the message based on the overall satisfaction score
            var message = "";
            if (overallSatisfaction >= 8.5) {
                message = "You are completely satisfied with your job! üéâ";
            } else if (overallSatisfaction >= 7) {
                message = "You are satisfied! üòä";
            } else if (overallSatisfaction >= 6) {
                message = "You are compromising! üòê";
            } else {
                message = "You are not satisfied. üòï";
            }

            // Display results
            var resultsDiv = document.getElementById('results');
            resultsDiv.innerHTML = `
                <h2>Job Satisfaction Score</h2>
                <p><strong>Overall Score:</strong> ${overallSatisfaction}</p>
                <p>${message}</p>
                <p>Based on the ratings provided.</p>
<p><b>European Values Assignment 6</b></p>
            `;

           
                
                
            
            
            // Display results div
            resultsDiv.style.display = 'block';

            return false; // To prevent default form submission
        }
    </script>
